<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
>
    <data>
        <variable name="viewModel" type="com.client.traveller.ui.auth.AuthViewModel"/>
    </data>

    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:context=".ui.auth.SignupActivity">

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#F6F6F6"
                android:layout_centerVertical="true">



            <FrameLayout
                    android:id="@+id/fm2"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/background_circle1">

            </FrameLayout>

            <FrameLayout
                    android:id="@+id/fm3"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/background_circle2">

            </FrameLayout>

            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true">
                <EditText
                        android:id="@+id/firstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/first_name"
                        android:gravity="center"
                        android:background="@drawable/background_gradient2"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="50dp"
                        android:inputType="textPersonName"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="15sp"
                        android:textColorHint="@color/colorDark"
                        android:textColor="@color/colorDark"
                        android:text="@={viewModel.firstName}"
                />

                <EditText
                        android:id="@+id/lastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/last_name"
                        android:gravity="center"
                        android:background="@drawable/background_gradient2"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:layout_marginRight="20dp"
                        android:inputType="text"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="15sp"
                        android:layout_below="@id/firstName"
                        android:textColorHint="@color/colorDark"
                        android:textColor="@color/colorDark"
                        android:text="@={viewModel.lastName}"
                />



                <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/email"
                        android:gravity="center"
                        android:background="@drawable/background_gradient2"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="20dp"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:layout_marginRight="20dp"
                        android:text="@={viewModel.email}"
                        android:inputType="textEmailAddress"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="15sp"
                        android:layout_below="@id/lastName"
                        android:textColorHint="@color/colorDark"
                        android:textColor="@color/colorDark"
                />

                <EditText
                        android:id="@+id/password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/password"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/email"
                        android:textCursorDrawable="@drawable/sky_blue_cursor_color"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="15sp"
                        android:background="@drawable/background_gradient2"
                        android:textColorHint="@color/colorDark"
                        android:textColor="@color/colorDark"
                        android:text="@={viewModel.password}"/>

                <EditText
                        android:id="@+id/re_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/re_password"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/password"
                        android:textCursorDrawable="@drawable/sky_blue_cursor_color"
                        android:inputType="textPassword"
                        android:gravity="center"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="15dp"
                        android:paddingBottom="15dp"
                        android:textSize="15sp"
                        android:background="@drawable/background_gradient2"
                        android:textColorHint="@color/colorDark"
                        android:textColor="@color/colorDark"
                        android:text="@={viewModel.confirmPassword}"
                />



                <Button
                        android:id="@+id/assistant_apply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/register"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_below="@id/re_password"
                        android:textCursorDrawable="@drawable/sky_blue_cursor_color"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp"
                        android:background="@drawable/background_gradient"
                        android:onClick="@{viewModel::onSignupButtonClick}"/>


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/already_a_member"
                        android:layout_below="@id/assistant_apply"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp"
                        android:textColor="@color/colorDark"
                        android:onClick="@{viewModel::toLogin}"
                />
            </RelativeLayout>


        </RelativeLayout>

        <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:id="@+id/progress_bar"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
        />

    </RelativeLayout>
</layout>

